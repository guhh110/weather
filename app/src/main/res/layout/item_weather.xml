<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:contentPadding="20dp"
        app:cardBackgroundColor="#eb4e4c4c"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/minTmp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13℃"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/minTmp_tv"
                android:text="~"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/maxTmp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv2"
                android:text="25℃"
                android:textColor="#fff"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/iv3"
                android:padding="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/minTmp_tv"
                android:layout_marginTop="5dp"
                android:src="@mipmap/hum_item" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/minTmp_tv"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv3"
                android:text="湿度："
                android:textColor="#fff" />

            <TextView
                android:id="@+id/hum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv1"
                android:layout_toRightOf="@id/tv1"
                android:text="57%"
                android:textColor="#fff"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/tv1"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ss" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv1"
                android:text="日出："
                android:textColor="#fff" />

            <TextView
                android:id="@+id/ss_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv3"
                android:layout_toRightOf="@id/tv3"
                android:text="15:00"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/tv3"
                android:layout_marginTop="5dp"
                android:src="@mipmap/sd1" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv2"
                android:text="日落："
                android:textColor="#fff" />

            <TextView
                android:id="@+id/sd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv4"
                android:layout_toRightOf="@id/tv4"
                android:text="15:00"
                android:textColor="#fff" />
            <ImageView
                android:layout_below="@id/tv4"
                android:id="@+id/iv4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/wind" />
            <TextView
                android:layout_toRightOf="@id/iv4"
                android:id="@+id/wind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_marginTop="10dp"
                android:text="无持续风向  微风  5km/h"
                android:textColor="#fff" />

            <LinearLayout
                android:id="@+id/day_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/dayWeather_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="晴间多云"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/dayIcon_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/cloudy4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="#fff"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/night_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/day_ll">

                <TextView
                    android:id="@+id/nightWeather_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="大雨"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/nightIcon_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/shower3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜"
                    android:textColor="#fff"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="2017-10-26"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>